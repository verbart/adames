.pageHeader
  padding-top 40px
  padding-bottom 30px
  background orange url('../images/page-header-bg.jpg') center / cover no-repeat
  font-family Ubuntu,Tahoma,Geneva, sans-serif
  &__caption
    text-transform uppercase
    font-weight 700
    color #fff
    font-size 36px
    margin-top 0
    margin-bottom 33px
  .breadcrumbs
    padding-left 30px
    color #fff
    font-size 14px
    &__item
      position relative
      padding-right .8em
      margin-right .5em
      text-transform uppercase
      &:last-child:after
        content ''
      &:after
        content ' / '
        position absolute
        right 0
    a
      color inherit
      text-decoration none
      &:hover
        text-decoration underline
